<!DOCTYPE html>
<html lang="en">

<head>

    <title>Checkout de Pagamento</title>
    <%-include('parts/head.ejs', {css: ['style.css', 'checkout-pagamento.css', 'nav-principal.css']}) %>
  
</head>

<body>
    <%-include('parts/header.ejs') %>
    <main>
        <div class="box">
            <div class="img-box">
                <a href="/"> <img id="logo-quadrado" src="/img/logo-quadrado.png"> </a>
            </div>

            <div class="form-box">
                <h2>Confirme seus dados</h2>

                <form action="#">
                    <div class="input-group">
                        <label for="numero-cartao">Digite o Número do cartão com 16 digitos</label>
                        <input type="text" id="numero-cartao" placeholder="" pattern="^[0-9]{16}$" required>
                    </div>

                    <div class="input-group">
                        <label for="nome-cartao">Nome no cartão</label>
                        <input type="text" id="nome-cartao" placeholder="" required>
                    </div>

                    <div class="input-group w50">
                        <label for="validade-cartao">Validade do cartão</label>
                        <div class="divisao">
                            <select type="number" id="mes" placeholder="" required>
                                <option value="1">Mês</option>
                                <option value="2">1</option>
                                <option value="3">2</option>
                                <option value="4">3</option>
                                <option value="5">4</option>
                                <option value="6">5</option>
                                <option value="7">6</option>
                                <option value="8">7</option>
                                <option value="9">8</option>
                                <option value="10">9</option>
                                <option value="11">10</option>
                                <option value="12">11</option>
                                <option value="13">12</option>
                            </select>
                            <select type="number" id="ano" placeholder="" required>
                                <option value="1">Ano</option>
                                <option value="2">2023</option>
                                <option value="3">2024</option>
                                <option value="4">2025</option>
                                <option value="5">2026</option>
                                <option value="6">2027</option>
                                <option value="7">2028</option>
                                <option value="8">2029</option>
                                <option value="9">2030</option>
                            </select>
                        </div>
                    </div>

                    <div class="input-group w50">
                        <label for="codigo-seguranca">Código de Segurança</label>
                        <input type="text" id="codigo-seguranca" placeholder="Digite o CVC" pattern="^[0-9]{3}$"
                            required maxlength="3">
                        </span>
                    </div>

                    <div class="input-group">
                        <button>Pagar</button>
                    </div>

                </form>
            </div>
        </div>
    </main>
    <%-include('parts/footer.ejs') %>
</body>

<script src="js/checkout-pagamento.js" defer></script>

</html>