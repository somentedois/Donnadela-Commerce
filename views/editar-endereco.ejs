<!DOCTYPE html>
<html lang="pt-br">

<head>
    <title>Editar Endereço</title>
    <%-include('parts/head.ejs', {css: ['style.css', 'editar-endereco.css' , 'editar-perfil.css' , 'perfil-de-usuario.css' , 'nav-principal.css' ]}) %>

</head>

<body>
    <%-include('parts/header.ejs') %>
        <main class="edit-address-page">
            <section class="my-addresses">
                <h3>Endereços</h3>
                <hr id="line-top">
                <div id="addresses">
                    <% if (usuario.enderecos.length > 0 ){  %>
                        <% usuario.enderecos.forEach(item => { %>
                            <div id="addresses"> 
                                <p><%= `${item.endereco}, ${item.numero} - ${item.bairro} - ${item.cidade} - ${item.estado} - ${item.cep}` %></p> 
                                <a href="#" id="signal">-</a>
                            </div>
                            <hr id="line">
                            <% }) %>
                        <% }else{ %>
                            <div id="addresses"> 
                                <p>Nenhum endereço cadastrado</p> 
                            </div>
                        <% } %>
                </div>
                <hr id="line">
            </section>

            <div class="box">
                <div class="form-box-edit-address">
                    <h2>Adicionar Endereço</h2>
                    <form action="#">
                        <div id="input-group">
                            <label for="cep">CEP</label>
                            <input type="text" name="cep" id="cep" placeholder="Digite o CEP"
                                pattern="^[0-9]{5}-[0-9]{3}$" required>
                        </div>

                        <div class="input-group w75" id="input-group">
                            <label for="endereco">Endereço</label>
                            <input type="text" name="endereco" id="endereco" placeholder="" required>
                        </div>

                        <div class="input-group w25" id="input-group">
                            <label for="numero">Número</label>
                            <input type="number" name="numero" id="numero" placeholder="" required>
                        </div>

                        <div class="input-group w65" id="input-group">
                            <label for="bairro">Bairro</label>
                            <input type="text" name="bairro" id="bairro" placeholder="" required>
                        </div>

                        <div class="input-group w35" id="input-group">
                            <label for="complemento">Complemento</label>
                            <input type="text" id="complemento" placeholder="">
                        </div>

                        <div class="input-group w25" id="input-group">
                            <label for="estado">Estado</label>
                            <input name="text" name="estado" id="estado" placeholder="" required>
                        </div>

                        <div class="input-group w75" id="input-group">
                            <label for="cidade">Cidade</label>
                            <input type="cidade" name="cidade" id="cidade" placeholder="" required>
                        </div>

                        <div id="input-group">
                            <button type="submit">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%-include('parts/footer.ejs') %>

</body>
<script src="js/checkout-endereco.js" defer></script>

</html>