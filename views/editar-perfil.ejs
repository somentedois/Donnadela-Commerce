<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Editar Perfil</title>
    <%-include('parts/head.ejs', {css: ['style.css', 'cadastro.css', 'nav-principal.css']}) %>

    
</head>
<body>
    <%-include('parts/header.ejs') %>
    <main>
        <div class="box">
            <div class="img-box">
                <a href="/"><img id="logo-quadrado" src="/img/logo-quadrado.png"></a>
            </div>
            
            <div class="form-box" >
                <h2>Editar Perfil</h2>
                <form id="form" action="/editar-perfil/<%= usuario.id %>" method="post">
                    <div class="input-group">
                        <label for="nome">Nome Completo</label>
                        <input type="text" id="nome" name="nome" value="<%= usuario.nome %>" required>
                    </div>

                    <div class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" value="<%= usuario.email %>" required>
                    </div>

                    <div class="input-group">
                        <label for="telefone">Telefone</label>
                        <input type="tel" maxlength="15" onkeyup="handlePhone(event)" id="telefone" placeholder="Digite o seu telefone" required>
                    </div>

                    <div class="input-group w50">
                        <label for="senha">Alterar Senha</label>
                        <input type="password" id="senha" placeholder="Digite sua senha" required>
                        <span id="error" class="error">Erro!</span>
                    </div>

                    <div class="input-group w50">
                        <label for="confirmarsenha">Confirmar senha</label>
                        <input type="password" id="confirmarSenha" placeholder="Confirme sua senha" required>
                        <span id="error" class="error">Erro!</span>
                    </div>
                    
                    <div class="input-group">
                        <input id="botao" type="submit" value="Cadastrar">
                    </div> 
                </form>
            </div>
        </div>
    </main>
    <%-include('parts/footer.ejs') %>
</body>
<script src="js/cadastro.js" defer></script>
</html>